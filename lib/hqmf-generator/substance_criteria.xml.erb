      <entry>
        <localVariableName><%= criteria.id %></localVariableName>
        <substanceAdministrationCriteria<%= " actionNegationInd='true'" if criteria.negation %>>
          <id root="2.16.840.1.113883.3.100.1" extension="<%= criteria.id %>"/>
          <%= xml_for_effective_time(criteria) %>
          <%= "<reasonCode valueSet=\"#{criteria.negation_code_list_id}\"/>" if criteria.negation && criteria.negation_code_list_id %>
          <participant typeCode="CSM">
            <roleParticipant classCode="THER">
              <%= xml_for_code(criteria, 'code', false) %>
            </roleParticipant>
          </participant>
          <definition>
            <substanceAdministrationReference moodCode="DEF">
              <id root="2.16.840.1.113883.3.100.1" extension="<%= section_name(criteria) %>"/>
            </substanceAdministrationReference>
          </definition>
          <%= xml_for_derivation(criteria) %>
          <%= xml_for_subsets(criteria) %>
          <%= xml_for_temporal_references(criteria) %>
        </substanceAdministrationCriteria>
      </entry>
